{
    "version": 2,
    "alias": "lorem-pix.now.sh",
    "builds": [
        {
            "src": "api.js",
            "use": "@now/node",
            "config": {
                "maxLambdaSize": "40mb"
            }
        },
        {
            "src": "index.html",
            "use": "@now/html-minifier"
        },
        {
            "src": "/front/*",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(?<width>[^/]+)/?(?<height>[^/]*)/?(?<color>[^/]*)",
            "dest": "/api.js?width=$width&height=$height&color=$color"
        }
    ]
}
